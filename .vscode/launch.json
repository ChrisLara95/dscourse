    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Dash",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/clases/26_Dashboards",
            "module": "flask",
            "env": {
                "FLASK_APP": "ejemplo_dash",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/clases/25_contenedores/app_1",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}